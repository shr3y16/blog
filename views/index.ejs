<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">HomePage</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="#">Home</a>
            </li>

            <% if(status == "loggedIn") {%>
            <li class="nav-item">
              <a class="nav-link" href="/auth/logout">Logout</a>
            </li>
            <% }else{ %>
            <li class="nav-item">
              <a class="nav-link" href="/register">Register</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/login">Login</a>
            </li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>
    <div class="container">
      <div class="card" style="width: 100%">
        <div class="card-body">
          <% if(status == "loggedIn") {%>
          <div class="container">
            <div class="row">
              <div class="col-12">
                <h1 class="my-4">Welcome, <%= user.email %>!</h1>
              </div>
            </div>
            <button
              type="button"
              class="btn btn-success"
              data-bs-toggle="modal"
              data-bs-target="#addBlogModal"
              style="margin-bottom: 15px"
            >
              Add Blog
            </button>
            <div class="row">
              <div class="col-12">
                <h2>Your Blogs:</h2>

                <% if (blogs.length > 0) { %>
                <div class="row">
                  <% blogs.forEach(blog => { %>
                  <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                      <div class="card-body">
                        <h3 class="card-title"><%= blog.title %></h3>
                        <p class="card-text">
                          <%= blog.content.substring(0, 150) %>...
                        </p>
                        <button
                          type="button"
                          class="btn btn-primary"
                          data-bs-toggle="modal"
                          data-bs-target="#blogModal<%= blog.blog_id %>"
                        >
                          Read More
                        </button>
                        <button
                          class="btn btn-danger delete-btn"
                          data-id="<%= blog.blog_id %>"
                        >
                          Delete
                        </button>
                      </div>
                    </div>
                  </div>

                  <!-- Modal for showing the blog details -->
                  <div
                    class="modal fade"
                    id="blogModal<%= blog.blog_id %>"
                    tabindex="-1"
                    aria-labelledby="blogModalLabel<%= blog.blog_id %>"
                    aria-hidden="true"
                  >
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5
                            class="modal-title"
                            id="blogModalLabel<%= blog.blog_id %>"
                          >
                            <%= blog.title %>
                          </h5>
                          <button
                            type="button"
                            class="btn-close"
                            data-bs-dismiss="modal"
                            aria-label="Close"
                          ></button>
                        </div>
                        <div class="modal-body">
                          <p><%= blog.content %></p>
                        </div>
                        <div class="modal-footer">
                          <button
                            type="button"
                            class="btn btn-secondary"
                            data-bs-dismiss="modal"
                          >
                            Close
                          </button>
                        </div>
                      </div>
                    </div>
                  </div>
                  <% }) %>
                </div>
                <% } else { %>
                <p class="alert alert-info">You have no blogs yet.</p>
                <% } %>
              </div>
            </div>
          </div>

          <div
            class="modal fade"
            id="addBlogModal"
            tabindex="-1"
            aria-labelledby="addBlogModalLabel"
            aria-hidden="true"
          >
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="addBlogModalLabel">
                    Add New Blog
                  </h5>
                  <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                  ></button>
                </div>
                <div class="modal-body">
                  <form id="addBlogForm" action="/blogs" method="POST">
                    <div class="mb-3">
                      <label for="title" class="form-label">Blog Title</label>
                      <input
                        type="text"
                        class="form-control"
                        id="title"
                        name="title"
                        required
                      />
                    </div>
                    <div class="mb-3">
                      <label for="content" class="form-label"
                        >Blog Content</label
                      >
                      <textarea
                        class="form-control"
                        id="content"
                        name="content"
                        rows="5"
                        required
                      ></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">
                      Create Blog
                    </button>
                  </form>
                </div>
              </div>
            </div>
          </div>

          <% }else{ %>
          <div>
            <h5 class="card-title">Welcome</h5>
            <h6
              class="card-subtitle mb-2 text-body-secondary"
              style="margin: auto"
            >
              To the best app itw
            </h6>
            <p class="card-text">Login or register to continue</p>
            <button class="btn btn-primary">
              <a href="/login" style="color: white">Login</a>
            </button>
            <button class="btn btn-primary">
              <a href="/register " style="color: white">Register</a>
            </button>
          </div>
          <% } %>
        </div>
      </div>
    </div>
    <script type="module" src="/js/delete.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
